{
  "name": "@online-exhibition/server",
  "version": "0.0.1",
  "description": "Backend server for the online exhibition project",
  "main": "lib/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/online-exhibition/server.git"
  },
  "keywords": [
    "fotos",
    "pictures",
    "images",
    "server",
    "exhibition"
  ],
  "author": "Christian Dein",
  "license": "LGPL-2.1-or-later",
  "bugs": {
    "url": "https://github.com/online-exhibition/server/issues"
  },
  "homepage": "https://github.com/online-exhibition/server#readme",
  "scripts": {
    "build": "babel src --out-dir lib",
    "start": "nodemon --exec babel-node src/main.js"
  },
  "config": {
    "port": 8080,
    "logLevel": "debug",
    "log": "./logs/server.log",
    "accessLog": "./logs/access.log",
    "database": {
      "url": "mongodb://mongo:27017",
      "name": "exhibition",
      "options": {
        "useNewUrlParser": true,
        "auth": {
          "user": "root"
        }
      }
    },
    "cors": [
      "foto-labor.org"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@types/dot": "^1.1.3",
    "@types/nodegit": "^0.26.2",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^2.0.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "compression": "^1.7.4",
    "dot": "^1.1.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "lodash": "^4.17.15",
    "mongodb": "^3.5.2",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.6",
    "passport": "^0.4.1",
    "passport-http": "^0.3.0",
    "rxjs": "^6.5.4",
    "semver": "^7.1.3",
    "uuid": "^7.0.3"
  }
}
